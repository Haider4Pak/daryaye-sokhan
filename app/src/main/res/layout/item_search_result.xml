<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/src_item_main_layer"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/srcCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0px"
        android:elevation="0dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:focusable="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/selector_attentions_list_item"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            android:id="@+id/src_layout">

            <TextView
                android:id="@+id/src_verse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:fontFamily="@font/iran_sans_mobile_light_fa"
                android:text="@string/verse"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textAlignment="gravity" />

            <TextView
                android:id="@+id/src_verse_reference"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/src_verse"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="@string/reference"
                android:background="@color/lightGray"
                android:textSize="14sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:fontFamily="@font/iran_sans_mobile_light_fa"
                android:textColor="@color/black"
                android:textAlignment="gravity" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>